{
  "name": "a18n",
  "version": "1.9.6",
  "description": "Automated I18n solution for JavaScript/TypeScript/React, effortlessly add I18n support for existing projects.",
  "main": "dist/i18n/index.js",
  "author": "FallenMax <FallenMax@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "test": "jest",
    "coverage": "codecov",
    "test:watch": "jest --watch",
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc --project tsconfig.json",
    "build:browser": "rollup --config rollup.config.js",
    "build:watch": "tsc --project tsconfig.json --incremental --tsBuildInfoFile ./tmp/.tsbuildinfo --watch",
    "watch": "tsc --project tsconfig.json --watch",
    "prepublishOnly": "pnpm install && npm run build && npm run test"
  },
  "keywords": [
    "i18n",
    "parse",
    "wrap",
    "extract",
    "codemod",
    "ast",
    "localization",
    "translation",
    "react",
    "typescript",
    "jsx",
    "tsx"
  ],
  "bin": {
    "a18n": "./bin/index.js"
  },
  "jest": {
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*\\.test.(js|jsx|ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.mock.*",
      "!**/test/**",
      "!**/__test__/**"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "engines": {
    "node": ">=8.1"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.17.1",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^26.0.24",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^14.18.21",
    "@types/react": "^16.14.28",
    "@types/yargs-parser": "^15.0.0",
    "codecov": "^3.8.3",
    "jest": "^26.6.3",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@babel/parser": "^7.18.6",
    "@babel/traverse": "^7.18.6",
    "@babel/types": "7.11.5",
    "chalk": "^4.1.2",
    "cjk-regex": "^2.0.1",
    "fast-glob": "^3.2.11",
    "jest-worker": "^26.6.2",
    "mkdirp": "^1.0.4",
    "p-map": "^4.0.0",
    "recast": "0.20.3",
    "yargs-parser": "^20.2.9"
  },
  "resolutions": {
    "@babel/types": "7.11.5"
  }
}
